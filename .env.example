# Configuración del Bot de Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# API Key de HERE Maps
HERE_API_KEY=your_here_maps_api_key

# Configuración de administración
ADMIN_GROUP_ID=-100123456789
ADMIN_IDS=123456789,987654321

# Configuración de entorno
NODE_ENV=development
PORT=3000

# URL pública para webhooks (solo en producción)
APP_URL=https://your-app-url.com

# Token para autenticación de API
API_TOKEN=your_secure_api_token

# Railway (opcional - se configura automáticamente)
RAILWAY_STATIC_URL=your-railway-app.up.railway.app

# Configuración de logs
LOG_LEVEL=info